<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans           http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- 循环依赖问题 -->
  <bean id="a" class="xyz.flysium.spring.samples.circularreference.A">
    <property name="b" ref="b"/>
  </bean>

  <bean id="b" class="xyz.flysium.spring.samples.circularreference.B" scope="prototype">
    <property name="c" ref="c"/>
  </bean>

  <bean id="c" class="xyz.flysium.spring.samples.circularreference.C" scope="prototype">
    <property name="a" ref="a"/>
  </bean>

</beans>